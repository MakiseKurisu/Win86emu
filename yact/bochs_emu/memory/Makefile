.SUFFIXES: .cc

srcdir = .

top_builddir    = ..
top_srcdir      = ..

SHELL = /bin/sh



CXX = cl
CXXFLAGS = /nologo /MT /W3 /EHs-c- /DNDEBUG /DWIN32 /D_WINDOWS /D_CRT_SECURE_NO_WARNINGS /Ox 

LDFLAGS = 
LIBS = 
X_LIBS = 
X_PRE_LIBS = 
RANLIB = echo


BX_INCDIRS = -I.. -I$(srcdir)/.. -I../instrument/stubs -I$(srcdir)/../instrument/stubs

BX_OBJS = \
	memory.o misc_mem.o

BX_INCLUDES = ../bochs.h ../config.h

all: libmemory.a

.cc.o:
	$(CXX) /c $(BX_INCDIRS) $(CXXFLAGS) /Tp$< /Fo$@


libmemory.a: $(BX_OBJS)
	-del libmemory.a
	lib /nologo /subsystem:console /verbose /out:$@ $(BX_OBJS)
	$(RANLIB) libmemory.a

$(BX_OBJS): $(BX_INCLUDES)

clean:
	-del *.o
	-del *.a

dist-clean: clean
	-del Makefile

